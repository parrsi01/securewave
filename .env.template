# =============================================================================
# SecureWave VPN - Environment Configuration
# =============================================================================
# Generate secrets with: python -c "import secrets; print(secrets.token_urlsafe(64))"
# Generate Fernet key: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"

# Environment Mode
ENVIRONMENT=development  # development or production

# Database
DATABASE_URL=postgresql+psycopg2://user:password@localhost:5432/securewave

# Security - JWT (REQUIRED in production)
ACCESS_TOKEN_SECRET=dev_access_secret  # CHANGE THIS! Generate secure secret for production
REFRESH_TOKEN_SECRET=dev_refresh_secret  # CHANGE THIS! Generate secure secret for production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=20160  # 14 days

# Security - CORS (REQUIRED in production)
CORS_ORIGINS=http://localhost:8000,http://localhost:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# Rate Limiting (Optional - uses in-memory if not set)
REDIS_URL=memory://  # For production: redis://host:port or Azure Cache URL

# WireGuard Configuration
WG_ENCRYPTION_KEY=  # Generate with Fernet.generate_key()
AUTH_ENCRYPTION_KEY=  # Generate with Fernet.generate_key()
WG_DNS=1.1.1.1
WG_DATA_DIR=/wg
WG_MOCK_MODE=false  # Set to true to disable WireGuard binary requirement

# Payment Processing
STRIPE_SECRET=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx
PAYPAL_CLIENT_ID=xxxxx
PAYPAL_CLIENT_SECRET=xxxxx

# Application Settings
PORT=8000
WEB_CONCURRENCY=2
GUNICORN_TIMEOUT=120
