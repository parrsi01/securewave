/* SecureWave VPN - Enterprise Premium Theme (2025) */
/* Inspired by Surfshark/NordVPN - Modern Professional Design */
/* Color Scheme: Teal/Cyan (#5eead4, #2dd4bf, #14b8a6) + White - Matches Logo */
/* Last Updated: 2025-12-31 */

@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap');

:root {
  /* Primary Brand Colors - Teal/Cyan Theme */
  --primary-950: #042f2e;
  --primary-900: #134e4a;
  --primary-800: #115e59;
  --primary-700: #0f766e;
  --primary-600: #0d9488;
  --primary-500: #14b8a6;
  --primary-400: #2dd4bf;
  --primary-300: #5eead4;
  --primary-200: #99f6e4;
  --primary-100: #ccfbf1;
  --primary-50: #f0fdfa;

  /* Dark Navy Backgrounds */
  --navy-950: #0a0e27;
  --navy-900: #0f172a;
  --navy-800: #1e293b;
  --navy-700: #334155;
  --navy-600: #475569;
  --navy-500: #64748b;

  /* Light Grays */
  --gray-50: #f8fafc;
  --gray-100: #f1f5f9;
  --gray-200: #e2e8f0;
  --gray-300: #cbd5e1;
  --gray-400: #94a3b8;
  --gray-500: #64748b;
  --gray-600: #475569;
  --gray-700: #334155;
  --gray-800: #1e293b;
  --gray-900: #0f172a;

  /* Semantic Colors */
  --success: #10b981;
  --success-dark: #059669;
  --warning: #f59e0b;
  --error: #ef4444;
  --info: #3b82f6;

  /* Gradients */
  --gradient-primary: linear-gradient(135deg, var(--primary-500) 0%, var(--primary-600) 100%);
  --gradient-dark: linear-gradient(135deg, var(--navy-950) 0%, var(--navy-900) 100%);
  --gradient-overlay: linear-gradient(135deg, rgba(20, 184, 166, 0.1) 0%, rgba(13, 148, 136, 0.1) 100%);

  /* Spacing */
  --space-1: 0.25rem;
  --space-2: 0.5rem;
  --space-3: 0.75rem;
  --space-4: 1rem;
  --space-5: 1.25rem;
  --space-6: 1.5rem;
  --space-8: 2rem;
  --space-10: 2.5rem;
  --space-12: 3rem;
  --space-16: 4rem;
  --space-20: 5rem;
  --space-24: 6rem;

  /* Border Radius */
  --radius-sm: 0.375rem;
  --radius-md: 0.5rem;
  --radius-lg: 0.75rem;
  --radius-xl: 1rem;
  --radius-2xl: 1.5rem;
  --radius-3xl: 2rem;
  --radius-full: 9999px;

  /* Shadows */
  --shadow-xs: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --shadow-sm: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px -1px rgba(0, 0, 0, 0.1);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -4px rgba(0, 0, 0, 0.1);
  --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.15), 0 8px 10px -6px rgba(0, 0, 0, 0.1);
  --shadow-2xl: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  --shadow-glow: 0 0 40px rgba(20, 184, 166, 0.4);
  --shadow-glow-lg: 0 0 60px rgba(20, 184, 166, 0.5);

  /* Transitions */
  --transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition: 200ms cubic-bezier(0.4, 0, 0.2, 1);
  --transition-slow: 300ms cubic-bezier(0.4, 0, 0.2, 1);
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  font-size: 16px;
  scroll-behavior: smooth;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

body {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  background: var(--gradient-dark);
  color: var(--gray-100);
  line-height: 1.6;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  letter-spacing: -0.01em;
  position: relative;
  overflow-x: hidden;
}

body::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background:
    radial-gradient(circle at 20% 50%, rgba(20, 184, 166, 0.15) 0%, transparent 50%),
    radial-gradient(circle at 80% 80%, rgba(45, 212, 191, 0.1) 0%, transparent 50%);
  pointer-events: none;
  z-index: 0;
}

/* Typography */
h1, h2, h3, h4, h5, h6 {
  font-weight: 700;
  line-height: 1.2;
  margin-bottom: var(--space-6);
  letter-spacing: -0.03em;
  color: var(--gray-50);
}

h1 {
  font-size: clamp(2.5rem, 6vw, 4.5rem);
  font-weight: 900;
  background: linear-gradient(135deg, var(--primary-400) 0%, var(--primary-300) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

h2 {
  font-size: clamp(2rem, 4vw, 3.5rem);
  font-weight: 800;
}

h3 {
  font-size: clamp(1.5rem, 3vw, 2.25rem);
  font-weight: 700;
}

p {
  margin-bottom: var(--space-5);
  color: var(--gray-300);
  font-size: 1.0625rem;
  line-height: 1.75;
}

a {
  color: var(--primary-400);
  text-decoration: none;
  transition: color var(--transition);
  font-weight: 500;
}

a:hover {
  color: var(--primary-300);
}

/* Container */
.container {
  max-width: 1280px;
  margin: 0 auto;
  padding: 0 var(--space-6);
  width: 100%;
  position: relative;
  z-index: 1;
}

.container-sm {
  max-width: 640px;
  margin: 0 auto;
  padding: 0 var(--space-6);
  position: relative;
  z-index: 1;
}

/* Navbar - Premium Design */
.navbar {
  background: rgba(10, 14, 39, 0.8);
  backdrop-filter: blur(20px);
  border-bottom: 1px solid rgba(20, 184, 166, 0.1);
  padding: var(--space-5) 0;
  position: sticky;
  top: 0;
  z-index: 1000;
  box-shadow: 0 4px 30px rgba(0, 0, 0, 0.3);
}

.navbar-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: 1280px;
  margin: 0 auto;
  padding: 0 var(--space-6);
}

.navbar-brand {
  display: flex;
  align-items: center;
  gap: var(--space-3);
  font-weight: 900;
  font-size: 1.5rem;
  color: var(--primary-400);
  text-decoration: none;
  letter-spacing: -0.02em;
}

.navbar-brand img {
  width: 48px;
  height: 48px;
  transition: transform var(--transition);
  filter: drop-shadow(0 0 10px rgba(20, 184, 166, 0.3));
}

.navbar-brand:hover img {
  transform: scale(1.05);
  filter: drop-shadow(0 0 15px rgba(20, 184, 166, 0.5));
}

.navbar-menu {
  display: flex;
  align-items: center;
  gap: var(--space-2);
  list-style: none;
}

.navbar-menu a,
.navbar-menu button {
  color: var(--gray-300);
  font-weight: 600;
  font-size: 0.9375rem;
  transition: all var(--transition);
  padding: var(--space-3) var(--space-5);
  border-radius: var(--radius-lg);
  border: none;
  background: none;
  cursor: pointer;
  font-family: inherit;
  white-space: nowrap;
}

.navbar-menu a:hover,
.navbar-menu a.active,
.navbar-menu button:hover {
  color: var(--primary-400);
  background: rgba(20, 184, 166, 0.1);
}

.navbar-toggle {
  display: none;
  background: none;
  border: none;
  color: var(--primary-400);
  font-size: 1.75rem;
  cursor: pointer;
  padding: var(--space-2);
}

/* Buttons - Premium Style */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-3);
  padding: 1rem 2rem;
  font-weight: 700;
  font-size: 1rem;
  border-radius: var(--radius-full);
  border: none;
  cursor: pointer;
  transition: all var(--transition);
  text-decoration: none;
  white-space: nowrap;
  font-family: inherit;
  letter-spacing: -0.01em;
  text-transform: uppercase;
  font-size: 0.875rem;
}

.btn-primary {
  background: var(--gradient-primary);
  color: white;
  box-shadow: var(--shadow-glow);
  position: relative;
  overflow: hidden;
}

.btn-primary::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.btn-primary:hover::before {
  left: 100%;
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-glow-lg);
}

.btn-secondary {
  background: transparent;
  color: var(--primary-400);
  border: 2px solid var(--primary-500);
  box-shadow: var(--shadow-sm);
}

.btn-secondary:hover {
  background: rgba(20, 184, 166, 0.1);
  border-color: var(--primary-400);
  transform: translateY(-1px);
}

.btn-outline {
  background: transparent;
  color: var(--gray-300);
  border: 2px solid var(--gray-700);
}

.btn-outline:hover {
  background: var(--navy-800);
  border-color: var(--primary-500);
  color: var(--primary-400);
}

.btn-lg {
  padding: 1.25rem 2.5rem;
  font-size: 1rem;
}

.btn-sm {
  padding: 0.75rem 1.5rem;
  font-size: 0.8125rem;
}

.btn-block {
  width: 100%;
}

.btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none !important;
}

/* Cards - Premium Glass Effect */
.card {
  background: rgba(30, 41, 59, 0.5);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(20, 184, 166, 0.2);
  border-radius: var(--radius-2xl);
  padding: var(--space-10);
  transition: all var(--transition-slow);
  box-shadow: var(--shadow-xl);
  position: relative;
  overflow: hidden;
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(90deg, transparent, var(--primary-500), transparent);
  opacity: 0.5;
}

.card:hover {
  border-color: var(--primary-500);
  box-shadow: 0 20px 40px rgba(20, 184, 166, 0.2);
  transform: translateY(-4px);
}

/* Grid */
.grid {
  display: grid;
  gap: var(--space-8);
}

.grid-2 {
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
}

.grid-3 {
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
}

.grid-4 {
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
}

/* Hero Section - Modern VPN Style */
.hero {
  padding: var(--space-24) 0;
  text-align: center;
  position: relative;
  z-index: 1;
}

.hero-subtitle {
  font-size: 1.5rem;
  color: var(--gray-300);
  max-width: 800px;
  margin: 0 auto var(--space-10);
  font-weight: 400;
  line-height: 1.6;
}

.hero-actions {
  display: flex;
  gap: var(--space-5);
  justify-content: center;
  flex-wrap: wrap;
}

/* Feature Cards */
.feature-card {
  text-align: center;
  padding: var(--space-8);
}

.feature-icon {
  width: 80px;
  height: 80px;
  margin: 0 auto var(--space-6);
  background: var(--gradient-primary);
  border-radius: var(--radius-2xl);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 2.5rem;
  box-shadow: var(--shadow-glow);
}

/* Forms - Modern Design */
.form-group {
  margin-bottom: var(--space-6);
}

label {
  display: block;
  margin-bottom: var(--space-3);
  color: var(--gray-200);
  font-weight: 600;
  font-size: 0.9375rem;
}

input,
textarea,
select {
  width: 100%;
  padding: 1rem 1.25rem;
  background: rgba(30, 41, 59, 0.5);
  border: 2px solid rgba(20, 184, 166, 0.2);
  border-radius: var(--radius-lg);
  color: var(--gray-100);
  font-size: 1rem;
  font-family: inherit;
  transition: all var(--transition);
  backdrop-filter: blur(10px);
}

input:focus,
textarea:focus,
select:focus {
  outline: none;
  border-color: var(--primary-500);
  box-shadow: 0 0 0 4px rgba(20, 184, 166, 0.1);
  background: rgba(30, 41, 59, 0.7);
}

input::placeholder,
textarea::placeholder {
  color: var(--gray-500);
}

/* Badge */
.badge {
  display: inline-flex;
  align-items: center;
  gap: var(--space-2);
  padding: 0.5rem 1rem;
  border-radius: var(--radius-full);
  font-size: 0.875rem;
  font-weight: 700;
  background: rgba(20, 184, 166, 0.2);
  border: 1px solid var(--primary-500);
  color: var(--primary-300);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.badge-success {
  background: rgba(16, 185, 129, 0.2);
  border-color: var(--success);
  color: var(--success);
}

.badge-error {
  background: rgba(239, 68, 68, 0.2);
  border-color: var(--error);
  color: var(--error);
}

.badge-info {
  background: rgba(59, 130, 246, 0.2);
  border-color: var(--info);
  color: var(--info);
}

/* Alert */
.alert {
  padding: var(--space-5);
  border-radius: var(--radius-lg);
  margin-bottom: var(--space-5);
  font-weight: 600;
  backdrop-filter: blur(10px);
}

.alert-success {
  background: rgba(16, 185, 129, 0.2);
  border: 1px solid var(--success);
  color: var(--success);
}

.alert-error {
  background: rgba(239, 68, 68, 0.2);
  border: 1px solid var(--error);
  color: var(--error);
}

/* Footer */
.footer {
  background: rgba(10, 14, 39, 0.8);
  backdrop-filter: blur(20px);
  border-top: 1px solid rgba(20, 184, 166, 0.1);
  padding: var(--space-12) 0;
  text-align: center;
  color: var(--gray-400);
  margin-top: auto;
  position: relative;
  z-index: 1;
}

/* Utility Classes */
.text-center { text-align: center; }
.text-muted { color: var(--gray-500); }
.text-primary { color: var(--primary-400); }
.mt-2 { margin-top: var(--space-2); }
.mt-3 { margin-top: var(--space-3); }
.mt-4 { margin-top: var(--space-4); }
.mt-5 { margin-top: var(--space-5); }
.mb-2 { margin-bottom: var(--space-2); }
.mb-3 { margin-bottom: var(--space-3); }
.mb-4 { margin-bottom: var(--space-4); }
.mb-5 { margin-bottom: var(--space-5); }
.mb-6 { margin-bottom: var(--space-6); }
.d-none { display: none !important; }
.d-block { display: block !important; }

/* Auth Section */
.auth-section {
  padding: var(--space-20) 0;
  min-height: calc(100vh - 300px);
  display: flex;
  align-items: center;
}

/* Dashboard Specific */
.dashboard-header {
  background: rgba(30, 41, 59, 0.5);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(20, 184, 166, 0.2);
  border-radius: var(--radius-2xl);
  padding: var(--space-8);
  margin-bottom: var(--space-8);
  box-shadow: var(--shadow-xl);
}

.vpn-status {
  display: flex;
  align-items: center;
  gap: var(--space-4);
  padding: var(--space-6);
  background: rgba(20, 184, 166, 0.1);
  border-radius: var(--radius-xl);
  margin-bottom: var(--space-6);
}

.status-indicator {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background: var(--primary-400);
  box-shadow: 0 0 20px var(--primary-400);
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

/* Stats Cards */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: var(--space-6);
  margin-bottom: var(--space-8);
}

.stat-card {
  background: rgba(30, 41, 59, 0.5);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(20, 184, 166, 0.2);
  border-radius: var(--radius-xl);
  padding: var(--space-6);
  text-align: center;
}

.stat-value {
  font-size: 2.5rem;
  font-weight: 900;
  color: var(--primary-400);
  margin-bottom: var(--space-2);
}

.stat-label {
  color: var(--gray-400);
  font-size: 0.875rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

/* Responsive */
@media (max-width: 768px) {
  .navbar-menu {
    position: fixed;
    top: 77px;
    left: 0;
    right: 0;
    background: rgba(10, 14, 39, 0.98);
    backdrop-filter: blur(24px);
    flex-direction: column;
    padding: var(--space-6);
    gap: var(--space-2);
    border-top: 1px solid rgba(20, 184, 166, 0.2);
    transform: translateX(-100%);
    transition: transform var(--transition-slow);
    box-shadow: var(--shadow-2xl);
  }

  .navbar-menu.active {
    transform: translateX(0);
  }

  .navbar-toggle {
    display: block;
  }

  .grid-2, .grid-3, .grid-4 {
    grid-template-columns: 1fr;
  }

  .hero-actions {
    flex-direction: column;
  }

  .btn {
    width: 100%;
  }

  .hero {
    padding: var(--space-16) 0;
  }

  h1 {
    font-size: 2.5rem;
  }

  .stats-grid {
    grid-template-columns: 1fr;
  }
}

/* Loading Animation */
.loading {
  display: inline-block;
  width: 20px;
  height: 20px;
  border: 3px solid rgba(20, 184, 166, 0.3);
  border-radius: 50%;
  border-top-color: var(--primary-400);
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* Premium Glow Effects */
.glow {
  position: relative;
}

.glow::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
  height: 100%;
  background: radial-gradient(circle, rgba(20, 184, 166, 0.4) 0%, transparent 70%);
  filter: blur(20px);
  opacity: 0;
  transition: opacity var(--transition);
  pointer-events: none;
  z-index: -1;
}

.glow:hover::after {
  opacity: 1;
}

/* ============================================ */
/* ENHANCED ANIMATIONS & MICRO-INTERACTIONS */
/* ============================================ */

/* Floating Animation for Hero Elements */
@keyframes float {
  0%, 100% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-10px);
  }
}

.float-animation {
  animation: float 3s ease-in-out infinite;
}

/* Gradient Animation for Backgrounds */
@keyframes gradientShift {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

.animated-gradient {
  background-size: 200% 200%;
  animation: gradientShift 15s ease infinite;
}

/* Slide in from bottom */
@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.slide-in-up {
  animation: slideInUp 0.6s ease-out forwards;
}

/* Fade in with scale */
@keyframes fadeInScale {
  from {
    opacity: 0;
    transform: scale(0.95);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.fade-in-scale {
  animation: fadeInScale 0.5s ease-out forwards;
}

/* Shimmer effect for loading states */
@keyframes shimmer {
  0% {
    background-position: -1000px 0;
  }
  100% {
    background-position: 1000px 0;
  }
}

.shimmer {
  background: linear-gradient(
    to right,
    rgba(20, 184, 166, 0.1) 0%,
    rgba(20, 184, 166, 0.3) 50%,
    rgba(20, 184, 166, 0.1) 100%
  );
  background-size: 1000px 100%;
  animation: shimmer 2s infinite;
}

/* Ripple effect on click */
@keyframes ripple {
  to {
    transform: scale(4);
    opacity: 0;
  }
}

.ripple-effect {
  position: relative;
  overflow: hidden;
}

.ripple-effect::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 20px;
  height: 20px;
  background: rgba(20, 184, 166, 0.5);
  border-radius: 50%;
  transform: translate(-50%, -50%) scale(0);
  pointer-events: none;
}

.ripple-effect:active::after {
  animation: ripple 0.6s ease-out;
}

/* Card hover lift effect - enhanced */
.card {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.card:hover {
  transform: translateY(-8px) scale(1.02);
  box-shadow: 0 20px 40px rgba(20, 184, 166, 0.3);
}

/* Button press effect */
.btn:active {
  transform: translateY(1px) scale(0.98);
}

/* Logo pulse animation */
@keyframes logoPulse {
  0%, 100% {
    filter: drop-shadow(0 0 10px rgba(20, 184, 166, 0.3));
  }
  50% {
    filter: drop-shadow(0 0 20px rgba(20, 184, 166, 0.6));
  }
}

.navbar-brand img {
  animation: logoPulse 3s ease-in-out infinite;
}

/* Smooth scroll behavior with snap points */
html {
  scroll-snap-type: y proximity;
}

section {
  scroll-snap-align: start;
}

/* Interactive card tilt on hover (3D effect) */
.card-tilt {
  transform-style: preserve-3d;
  transition: transform 0.3s ease;
}

.card-tilt:hover {
  transform: perspective(1000px) rotateX(2deg) rotateY(2deg);
}

/* Stats counter animation */
@keyframes countUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.stat-value {
  animation: countUp 0.8s ease-out forwards;
}

/* Badge bounce on appearance */
@keyframes badgeBounce {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

.badge {
  animation: badgeBounce 0.5s ease-out;
}

/* Navbar scroll shadow */
.navbar.scrolled {
  box-shadow: 0 4px 30px rgba(0, 0, 0, 0.5);
  background: rgba(10, 14, 39, 0.95);
}

/* Hero section parallax effect */
.hero {
  position: relative;
}

.hero::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 50% 50%, rgba(20, 184, 166, 0.1) 0%, transparent 70%);
  animation: pulse 4s ease-in-out infinite;
}

/* Enhanced focus states for accessibility */
*:focus-visible {
  outline: 2px solid var(--primary-400);
  outline-offset: 3px;
  border-radius: var(--radius-sm);
}

/* Loading spinner */
.spinner {
  width: 40px;
  height: 40px;
  border: 4px solid rgba(20, 184, 166, 0.2);
  border-top-color: var(--primary-400);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

/* Text gradient animation */
@keyframes textShine {
  0% {
    background-position: 0% 50%;
  }
  100% {
    background-position: 200% 50%;
  }
}

.text-gradient-animate {
  background: linear-gradient(
    90deg,
    var(--primary-400) 0%,
    var(--primary-300) 50%,
    var(--primary-400) 100%
  );
  background-size: 200% auto;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  animation: textShine 3s linear infinite;
}

/* Stagger animation for lists */
.stagger-item {
  opacity: 0;
  animation: slideInUp 0.6s ease-out forwards;
}

.stagger-item:nth-child(1) { animation-delay: 0.1s; }
.stagger-item:nth-child(2) { animation-delay: 0.2s; }
.stagger-item:nth-child(3) { animation-delay: 0.3s; }
.stagger-item:nth-child(4) { animation-delay: 0.4s; }
.stagger-item:nth-child(5) { animation-delay: 0.5s; }
.stagger-item:nth-child(6) { animation-delay: 0.6s; }

/* Improved mobile interactions */
@media (hover: none) and (pointer: coarse) {
  .card:hover {
    transform: none;
  }

  .card:active {
    transform: scale(0.98);
  }

  .btn:hover {
    transform: none;
  }
}

/* Dark mode optimizations */
@media (prefers-color-scheme: dark) {
  :root {
    color-scheme: dark;
  }
}

/* Reduced motion for accessibility */
@media (prefers-reduced-motion: reduce) {
  *,
  *::before,
  *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}

/* High contrast mode support */
@media (prefers-contrast: high) {
  .card {
    border-width: 2px;
  }

  .btn {
    border-width: 3px;
  }
}

/* Enhanced card interactions */
.interactive-card {
  cursor: pointer;
  position: relative;
  overflow: hidden;
}

.interactive-card::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(20, 184, 166, 0.1);
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.interactive-card:hover::before {
  width: 300%;
  height: 300%;
}

/* Skeleton loading animation */
.skeleton {
  background: linear-gradient(
    90deg,
    rgba(30, 41, 59, 0.5) 25%,
    rgba(20, 184, 166, 0.1) 50%,
    rgba(30, 41, 59, 0.5) 75%
  );
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
}

/* Toast notification slide-in */
@keyframes toastSlideIn {
  from {
    transform: translateX(400px);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}

.toast {
  animation: toastSlideIn 0.3s ease-out forwards;
}

/* Hero text reveal animation */
@keyframes textReveal {
  from {
    opacity: 0;
    transform: translateY(30px);
    filter: blur(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
    filter: blur(0);
  }
}

h1 {
  animation: textReveal 0.8s ease-out forwards;
}

/* Enhanced button shimmer effect */
.btn-primary::before {
  animation: shimmer 3s infinite;
}

/* WiFi signal strength animation */
@keyframes wifiPulse {
  0%, 100% {
    opacity: 0.7;
    transform: scale(1);
  }
  50% {
    opacity: 1;
    transform: scale(1.1);
  }
}

.wifi-icon {
  animation: wifiPulse 2s ease-in-out infinite;
}
